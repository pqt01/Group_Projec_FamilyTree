@page
@model Group_Project_FamilyTree.Pages.MemberPage.EditModel

<h4>Member</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Member.Id" />
            <div class="form-group">
                <label asp-for="Member.FullName" class="control-label"></label>
                <input asp-for="Member.FullName" class="form-control" />
                <span asp-validation-for="Member.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.LinkAvatar" class="control-label"></label>
                <input asp-for="Member.LinkAvatar" class="form-control" />
                <span asp-validation-for="Member.LinkAvatar" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Member.Gender" /> @Html.DisplayNameFor(model => model.Member.Gender)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Member.BirthDate" class="control-label"></label>
                <input asp-for="Member.BirthDate" class="form-control" />
                <span asp-validation-for="Member.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.ParentId" class="control-label"></label>
                <select asp-for="Member.ParentId" class="form-control" asp-items="ViewBag.ParentId"></select>
                <span asp-validation-for="Member.ParentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.AccountId" class="control-label"></label>
                <select asp-for="Member.AccountId" class="form-control" asp-items="ViewBag.AccountId"></select>
                <span asp-validation-for="Member.AccountId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.FamilyId" class="control-label"></label>
                <select asp-for="Member.FamilyId" class="form-control" asp-items="ViewBag.FamilyId"></select>
                <span asp-validation-for="Member.FamilyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
