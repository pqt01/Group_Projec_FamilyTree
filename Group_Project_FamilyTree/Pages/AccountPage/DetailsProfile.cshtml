@page
@model Group_Project_FamilyTree.Pages.AccountPage.DetailsProfileModel

@{
	ViewData["Title"] = "DetailsProfile";
}

<style>
	.album {
		height: 100%;
		width: 100%;
	}

	.image {
		height: 200px;
		width: 200px;
		margin-bottom: 5px;
	}
</style>

<h1>Profile</h1>

<div>
	<hr />
	<dl class="row">
		<div class="album">
			<img class="image" src="~/image/@Model.Member.LinkAvatar" />
		</div>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Member.FullName)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Member.FullName)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Member.Gender)
		</dt>
		@if (Model.Member.Gender == true)
		{
			<dd class="col-sm-10">
				Male
			</dd>
		}
		else
		{
			<dd class="col-sm-10">
				Female
			</dd>
		}
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Member.BirthDate)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Member.BirthDate)
		</dd>
	</dl>
</div>
<div>
	<a asp-page="./UpdateProfile" asp-route-id="@Model.Member.Id" class="btn btn-primary">Update</a>
</div>
