@page
@model Group_Project_FamilyTree.Pages.FamilyPage.DeleteImageModel

@{
	ViewData["Title"] = "Delete";
}

<style>
	.album {
		height: 100%;
		width: 100%;
	}

	.image {
		height: 50%;
		width: 50%;
		margin-bottom: 5px;
	}
</style>

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
	<h4>Image</h4>
	<hr />
	<div class="album">
		<a><img class="image" src="~/image/@Model.Image.Url" /></a>
	</div>

	<form method="post">
		<input type="hidden" asp-for="Image.Id" />
		<input type="submit" value="Delete" class="btn btn-danger" /> |
		<a asp-page="./Album" class="btn btn-info">Back to List</a>
	</form>
</div>
